{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    },
    { "src": "vite.config.ts", "use": "@vercel/static-build" },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/index.ts" },
    { "src": "/(.*)", "dest": "/client/index.html" }
  ],
  "build": {
    "env": {
      "TS_NODE_COMPILER_OPTIONS": "{\"strict\":false}"
    }
  }
}
